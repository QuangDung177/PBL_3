        body {
            font-size: 14px;
            font-weight: 400;
            line-height: 1.5;
            background-color: rgb(245,245,245);
        }

        .header {
            height: 50px;
            background-color: rgb(24,42,170);
            display: flex;
            position: fixed;
            left: 0;
            right: 0;
            top: 0;
            width: 100%;
            padding-left: 150px;
            padding-right: 150px;
            justify-content: flex-end;
        }

        header ul {
            list-style-type: none;
        }

            header ul li a svg {
                background-color: rgb(255, 212, 59);
                color: rgb(0, 28, 64);
                display: block;
                margin: 0;
                padding: 15px;
            }

        .sidebar {
            background-color: rgb(24,42,170);
            color: white;
            width: 15%;
            height: 100%;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 20px;
        }

        .sidebar__menu {
            padding: 15px;
            list-style: none;
            border-radius: 10px;
            transition: border-radius 0.3s;
            z-index: -1;
        }

            .sidebar__menu li {
                padding: 15px 0;
                text-align: center;
                position: relative;
                line-height: 30px;
            }

                .sidebar__menu li a {
                    display: flex;
                    align-items: center;
                    text-decoration: none;
                    color: white;
                    padding: 6px 8px;
                    transition: 0.3s;
                }

                    .sidebar__menu li a:hover {
                        background-color: rgb(188,206,251);
                        color: rgb(24,42,170);
                        border-radius: 10px;
                    }

        .sidebar ul li a svg {
            margin-right: 10px;
        }

        .main_title {
            margin-top: 60px;
            margin-left: 30px;
            box-sizing: border-box;
            padding: 20px,40px;
            display: flex;
            -webkit-box-align: center;
            align-items: center;
            -webkit-box-pack: justify;
            justify-content: space-between;
            -webkit-box-orient: horizontal;
            -webkit-box-direction: normal;
            flex-direction: row;
            background-color: #FFF;
            border-radius: .375rem;
            border-left: 6px solid #FFD43B;
            margin-bottom: 20px;
            height: 50px;
        }

        .main_title-label {
            margin-bottom: 0;
            text-align: center;
            align-items: center;
            margin-left: 10px;
        }

        .col-md-12 {
            background-color: white;
            display: block;
            margin-left: 40px;
            margin-right: 40px;
            border-radius: .375rem;
            box-sizing: border-box;
            padding: 0px,15px;
            width: 96%
        }

        .title {
            -webkit-text-size-adjust: 100%;
            --font-family-sarabun: 'Roboto', sans-serif;
            --btn-fun: #4bac4d;
            font-family: var(--font-family-sarabun);
            font-size: 14px;
            font-weight: 400;
            line-height: 1.5;
            color: #212529;
            text-align: left;
            box-sizing: border-box;
            background: #ffffff;
            border-radius: .375rem;
            padding: 32px;
            box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 1px 5px 0 rgba(0, 0, 0, 0.12), 0 3px 1px -2px rgba(0, 0, 0, 0.2);
            margin-bottom: 30px;
            transition: all 0.3s ease-in-out;
        }

        #clock {
            text-align: center;
            float: right;
            border-radius: 20px;
            font-weight: 600;
            color: rgb(0, 0, 0);
            font-size: 13px;
            width: 300px;
            display: inline-block;
            align-items: center;
        }
    </style>
</head>
